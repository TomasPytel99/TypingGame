<Page x:Class="TypingGame.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TypingGame.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label HorizontalAlignment="Center" Margin="0,0,0,10" FontSize="48" FontWeight="Bold" FontFamily="Rockwell" Foreground="WhiteSmoke">TypeIT</Label>
            <Button Style="{DynamicResource ButtonStyle}" Width="150" Height="45" Padding="3" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" Click="Play_Click">Play</Button>
            <Button Style="{DynamicResource ButtonStyle}" Width="150" Height="45" Padding="3" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" Click="History_Click">History</Button>
            <Button Style="{DynamicResource ButtonStyle}" Width="150" Height="45" Padding="3" FontSize="24" FontWeight="Bold" Margin="0,0,0,0" Click="Exit_Click">Exit</Button>
        </StackPanel>
    </Grid>
</Page>
