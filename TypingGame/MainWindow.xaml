<Window x:Class="TypingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypingGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                <GradientStop Color="#994D1C" Offset="1"/>
                <GradientStop Color="#FF530707" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Frame x:Name="Frame" NavigationUIVisibility="Hidden" Focusable="True" Padding="20"/>
    </Grid>
</Window>
